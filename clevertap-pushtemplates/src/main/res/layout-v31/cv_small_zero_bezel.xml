<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view_small"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/image_media_dynamic_relative"
        android:id="@+id/big_media_configurable"/>

    <ImageView
        android:id="@+id/zero_bezel_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/big_media_configurable"
        android:importantForAccessibility="no"
        android:background="@drawable/pt_scrim" />

    <RelativeLayout
        android:id="@+id/rel_lyt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/large_icon"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/padding_vertical"
        android:paddingEnd="@dimen/padding_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="title"
            android:textAppearance="@style/PushTitle" />
        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignStart="@id/title"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="message message message"
            android:textAppearance="@style/PushMessage" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/large_icon"
        android:layout_width="@dimen/large_icon"
        android:layout_height="@dimen/large_icon"
        android:layout_marginStart="@dimen/metadata_title_margin_horizontal"
        android:layout_marginBottom="@dimen/padding_micro"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

</RelativeLayout>