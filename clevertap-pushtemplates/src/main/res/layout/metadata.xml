<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/small_icon"
        android:layout_width="@dimen/metadata_small_icon_x"
        android:layout_height="@dimen/metadata_small_icon_y"
        android:layout_marginEnd="@dimen/metadata_margin_x"
        android:layout_marginRight="@dimen/metadata_margin_x"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="app name"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_negative"
        android:textAppearance="@style/MetaData"/>

    <ImageView
        android:id="@+id/sep_subtitle"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="0dp"
        android:padding="1dp"
        android:scaleType="centerInside"
        android:src="@drawable/pt_dot_sep" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxWidth="@dimen/metadata_subtitle_max_width"
        android:maxLines="1"
        android:layout_marginTop="@dimen/padding_negative"
        android:gravity="center_vertical"
        tools:text="This is a subtitle that will clip"
        android:textAppearance="@style/MetaData" />

    <ImageView
        android:id="@+id/sep"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerInside"
        android:padding="1dp"
        android:src="@drawable/pt_dot_sep" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/padding_negative"
        android:maxLines="1"
        tools:text="timestamp"
        android:gravity="center_vertical"
        android:textAppearance="@style/MetaData"/>
</LinearLayout>