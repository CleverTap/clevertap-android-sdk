<FrameLayout android:id="@+id/inapp_cover_frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">

    <RelativeLayout
        android:id="@+id/cover_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/backgroundImage"
            android:contentDescription="inapp_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cover_title"
            android:contentDescription="inapp_title"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cover_message"
            android:contentDescription="inapp_message"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cover_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/cover_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/cover_message"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="54dp"
            android:layout_marginTop="60dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/cover_button1"
                android:contentDescription="inapp_btn1"
                android:layout_width="464dp"
                android:layout_height="42dp"
                android:textSize="20sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/cover_button2"
                android:contentDescription="inapp_btn2"
                android:layout_width="464dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <com.clevertap.android.sdk.customviews.CloseImageView
        android:contentDescription="inapp_close_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true" />
</FrameLayout>