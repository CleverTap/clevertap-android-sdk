<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/header_frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <RelativeLayout
        android:id="@+id/header_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header_linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/header_icon"
                android:contentDescription="inapp_icon"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/header_linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header_title"
                    android:contentDescription="inapp_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/header_message"
                    android:contentDescription="inapp_message"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="3"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_linear_layout_3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/header_linear_layout_1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/header_button_1"
                android:contentDescription="inapp_btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/header_button_2"
                android:contentDescription="inapp_btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>