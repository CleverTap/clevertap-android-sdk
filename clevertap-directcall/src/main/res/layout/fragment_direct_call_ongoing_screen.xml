<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundColor">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_callScreen_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/connecting"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_brand_logo"
        android:layout_width="214dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_callScreen_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_callContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="test call"
        android:textSize="21sp"
        android:textColor="@android:color/white"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_brand_logo"
        app:layout_constraintBottom_toTopOf="@+id/overlay"
        app:layout_constraintVertical_bias="0.1" />

    <Chronometer
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:45"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_callContext"
        app:layout_constraintBottom_toTopOf="@+id/tv_networkLatency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_networkLatency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Poor Network"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_callContext"
        app:layout_constraintBottom_toTopOf="@+id/overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer"
        app:layout_constraintBottom_toTopOf="@+id/overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tv_hold_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Call is on hold"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        android:visibility="gone"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/iv_banner"
        app:layout_constraintBottom_toTopOf="@+id/overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:background="@drawable/ct_semi_transparent_overlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_mute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ct_mute_outline"
        android:alpha="0.5"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintTop_toTopOf="@+id/overlay"
        app:layout_constraintBottom_toTopOf="@+id/tv_poweredBy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_speaker"/>

    <ImageView
        android:id="@+id/iv_speaker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ct_speaker_outline"
        android:alpha="0.5"
        android:clickable="false"
        app:layout_constraintTop_toTopOf="@+id/overlay"
        app:layout_constraintBottom_toTopOf="@+id/tv_poweredBy"
        app:layout_constraintStart_toEndOf="@+id/iv_mute"
        app:layout_constraintEnd_toStartOf="@+id/iv_bluetooth"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/iv_bluetooth"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ct_bluetooth_outline"
        android:alpha="0.5"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/overlay"
        app:layout_constraintBottom_toTopOf="@+id/tv_poweredBy"
        app:layout_constraintStart_toEndOf="@+id/iv_speaker"
        app:layout_constraintEnd_toStartOf="@+id/iv_hangup"
        app:layout_constraintVertical_bias="0.6" />

    <ImageView
        android:id="@+id/iv_hangup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ct_call_decline"
        app:layout_constraintTop_toTopOf="@+id/overlay"
        app:layout_constraintBottom_toTopOf="@+id/tv_poweredBy"
        app:layout_constraintStart_toEndOf="@+id/iv_bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/tv_poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/poweredBy"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
